%header#header.smooth
  .row
    .col-xs-12
      #intro.text-container{:style => "position:absolute;top:150px;left:0px;width:100%;"}
        #logo
        %h1 Get your team on the same page.
        %h2 
          %a{:href => '#contacts'} Get Started
        #explore
          %a.scroll{:href => '#about'}
            %h3 Learn More
            %i.icon-angle-down.icon-4x
#top-bar
  .container
    .row
      .col-md-4
        #logo-lettering
          %a.scroll{:href => "#header"}
            = image_tag('logo3.png')
        #menu-mobile.hidden-md.hidden-lg
          %i.icon-reorder.icon-2x
      .col-md-8
        %nav#top-navigation
          %ul.list-inline
            %li= link_to 'people',         people_path 
            %li= link_to 'events',         events_path
            %li
              %a{"data-method" => "delete", :href => destroy_user_session_path, :rel => "nofollow"} sign out
         