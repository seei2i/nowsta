  %li{:class => current_page?(people_path) && 'active'}
    %a.glyphicon.glyphicon-user{:href => people_path}
      %span PEOPLE
  %li{:class => current_page?(events_path) && 'active'}
    %a.glyphicon.glyphicon-star{:href => events_path}
      %span EVENTS
  / %li
  /   %a.glyphicon.glyphicon-briefcase{:href => '#'}
  /     %span ORGANIZATIONS
  / %li
  /   %a.glyphicon.glyphicon-comment{:href => '#'}
  /     %span MESSAGES
  %li
    %a.glyphicon.glyphicon-remove{"data-method" => "delete", :href => "/users/sign_out", :rel => "nofollow"}
