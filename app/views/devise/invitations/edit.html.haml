.authform
  %h2 Set Password
  = simple_form_for resource, :as => resource_name, :url => invitation_path(resource_name), :html => { :method => :put }, :defaults => { :input_html => { :class => "form-control" } } do |f|
    = devise_error_messages!
    = f.hidden_field :invitation_token
    = f.input :password
    %br
    = f.input :password_confirmation
    %br
    = f.button :submit, 'Sign up', :class => 'btn-primary'
