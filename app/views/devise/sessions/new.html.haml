.authform
  = simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => 'form-vertical' }, :defaults => { :input_html => { :class => "form-control" } }) do |f|
    = f.input :email, :autofocus => true
    %br
    = f.input :password
    %br
    / = f.input :remember_me, :as => :boolean if devise_mapping.rememberable?
    = f.button :submit, "Sign in", :class => 'btn-primary'
  = render "devise/shared/links"
