.container
  .col-xs-12
    %table.table.table-condensed
      %thead
        %tr
          %th Event
          %th Date
          %th Time
          %th Location
          %th Change/Update 
          %th Delete
      %tbody
        - if @events == nil
        - else
          - @events.each do |event|
            %tr
              %td= link_to event.name, event
              %td= event.date
              %td= event.time
              %td= event.location
              %td= link_to 'Edit', edit_event_path(event)
              %td= link_to "Remove", event_path(event), :data => { :confirm => "Are you sure?" }, :method => :delete
